{
  "name": "jardispsr/workflow",
  "version": "1.0.0",
  "description": "Workflow orchestration for PHP - Multi-step process execution with configurable transitions",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Jardis Development",
      "email": "jardisDev@headgent.com"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0.4",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "autoload": {
    "psr-4": {
      "JardisPsr\\Workflow\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo '#!/usr/bin/env bash' > .git/hooks/pre-commit",
      "echo 'bash ./support/pre-commit-hook.sh' >> .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  },
  "homepage": "https://github.com/JardisPsr/workflow",
  "support": {
    "issues": "https://github.com/JardisPsr/workflow/issues",
    "email": "jardisDev@headgent.com"
  },
  "keywords": ["domain" ,"workflow", "interfaces", "JardisPsr", "Headgent", "DDD"]
}
